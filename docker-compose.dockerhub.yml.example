services:
  web:
    image: docker.io/xiexiao064/lumina-web:${LUMINA_IMAGE_TAG}
    platform: linux/amd64
    restart: unless-stopped
    ports:
      - "3000:3000"
    environment:
      - API_BASE_URL=${API_BASE_URL:-/backend}
      - BACKEND_API_URL=${BACKEND_API_URL:-http://api:8000/backend}
      - INTERNAL_API_TOKEN=${INTERNAL_API_TOKEN}
      - ERROR_TASK_POLL_INTERVAL_MS=${ERROR_TASK_POLL_INTERVAL_MS:-600000}
    depends_on:
      - api
    networks:
      - app-network

  api:
    image: docker.io/xiexiao064/lumina-api:${LUMINA_IMAGE_TAG}
    platform: linux/amd64
    restart: unless-stopped
    ports:
      - "8000:8000"
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - SQLITE_WAL_ENABLED=${SQLITE_WAL_ENABLED:-true}
      - SQLITE_SYNCHRONOUS=${SQLITE_SYNCHRONOUS:-NORMAL}
      - SQLITE_BUSY_TIMEOUT_MS=${SQLITE_BUSY_TIMEOUT_MS:-5000}
      - SQLITE_TEMP_STORE=${SQLITE_TEMP_STORE:-2}
      - INTERNAL_API_TOKEN=${INTERNAL_API_TOKEN}
      - ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-*}
      - MEDIA_ROOT=/app/data/media
      - MEDIA_BASE_URL=${MEDIA_BASE_URL:-/backend/media}
      - MEDIA_PUBLIC_BASE_URL=${MEDIA_PUBLIC_BASE_URL:-}
    volumes:
      - ./data:/app/data
      - ./data/media:/app/data/media
    networks:
      - app-network

  worker:
    image: docker.io/xiexiao064/lumina-worker:${LUMINA_IMAGE_TAG}
    platform: linux/amd64
    restart: unless-stopped
    command: python worker.py
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - SQLITE_WAL_ENABLED=${SQLITE_WAL_ENABLED:-true}
      - SQLITE_SYNCHRONOUS=${SQLITE_SYNCHRONOUS:-NORMAL}
      - SQLITE_BUSY_TIMEOUT_MS=${SQLITE_BUSY_TIMEOUT_MS:-5000}
      - SQLITE_TEMP_STORE=${SQLITE_TEMP_STORE:-2}
      - INTERNAL_API_TOKEN=${INTERNAL_API_TOKEN}
      - AI_WORKER_POLL_INTERVAL=${AI_WORKER_POLL_INTERVAL:-3}
      - AI_TASK_LOCK_TIMEOUT=${AI_TASK_LOCK_TIMEOUT:-300}
    volumes:
      - ./data:/app/data
    depends_on:
      - api
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
