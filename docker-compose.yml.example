services:
  web:
    build: ./frontend
    ports:
      - "3000:3000"
    environment:
      - NEXT_PUBLIC_API_URL=http://api:8000
    depends_on:
      - api
    networks:
      - app-network

  api:
    build: ./backend
    ports:
      - "8000:8000"
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:3000,http://127.0.0.1:3000}
      - MEDIA_PUBLIC_BASE_URL=${MEDIA_PUBLIC_BASE_URL:-https://your-domain.com}
    volumes:
      - ./data:/app/data
    networks:
      - app-network

  worker:
    build: ./backend
    command: /app/.venv/bin/python worker.py
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - AI_WORKER_POLL_INTERVAL=3
      - AI_TASK_LOCK_TIMEOUT=300
    volumes:
      - ./data:/app/data
    depends_on:
      - api
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

volumes:
  data:
