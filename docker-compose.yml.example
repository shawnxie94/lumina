services:
  web:
    build: ./frontend
    ports:
      - "3000:3000"
    environment:
      - API_BASE_URL=${API_BASE_URL:-http://localhost:8000/backend}
      - BACKEND_API_URL=${BACKEND_API_URL:-http://api:8000/backend}
      - INTERNAL_API_TOKEN=${INTERNAL_API_TOKEN:-dev-internal-token-change-me}
      - ERROR_TASK_POLL_INTERVAL_MS=${ERROR_TASK_POLL_INTERVAL_MS:-600000}
    depends_on:
      - api
    networks:
      - app-network

  api:
    build: ./backend
    ports:
      - "8000:8000"
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - SQLITE_WAL_ENABLED=${SQLITE_WAL_ENABLED:-true}
      - SQLITE_SYNCHRONOUS=${SQLITE_SYNCHRONOUS:-NORMAL}
      - SQLITE_BUSY_TIMEOUT_MS=${SQLITE_BUSY_TIMEOUT_MS:-5000}
      - SQLITE_TEMP_STORE=${SQLITE_TEMP_STORE:-2}
      - INTERNAL_API_TOKEN=${INTERNAL_API_TOKEN:-dev-internal-token-change-me}
      - ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:3000,http://127.0.0.1:3000}
      - MEDIA_BASE_URL=${MEDIA_BASE_URL:-/backend/media}
      - MEDIA_PUBLIC_BASE_URL=${MEDIA_PUBLIC_BASE_URL:-}
    volumes:
      - ./data:/app/data
    networks:
      - app-network

  worker:
    build: ./backend
    command: python worker.py
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - SQLITE_WAL_ENABLED=${SQLITE_WAL_ENABLED:-true}
      - SQLITE_SYNCHRONOUS=${SQLITE_SYNCHRONOUS:-NORMAL}
      - SQLITE_BUSY_TIMEOUT_MS=${SQLITE_BUSY_TIMEOUT_MS:-5000}
      - SQLITE_TEMP_STORE=${SQLITE_TEMP_STORE:-2}
      - INTERNAL_API_TOKEN=${INTERNAL_API_TOKEN:-dev-internal-token-change-me}
      - AI_WORKER_POLL_INTERVAL=3
      - AI_TASK_LOCK_TIMEOUT=300
    volumes:
      - ./data:/app/data
    depends_on:
      - api
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
