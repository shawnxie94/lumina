services:
  web:
    build:
      context: ./frontend
      args:
        NEXT_PUBLIC_API_URL: ${NEXT_PUBLIC_API_URL:-http://localhost:8000}
    ports:
      - "3000:3000"
    environment:
      - NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL:-http://localhost:8000}
      - INTERNAL_API_TOKEN=034c6ac483ecbb6dbe15889df3584868566c1acfb64d33a297022b4af5044f00
    depends_on:
      - api
    networks:
      - app-network

  api:
    build: ./backend
    ports:
      - "8000:8000"
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - INTERNAL_API_TOKEN=034c6ac483ecbb6dbe15889df3584868566c1acfb64d33a297022b4af5044f00
      - ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:3000,http://127.0.0.1:3000}
      - MEDIA_PUBLIC_BASE_URL=${MEDIA_PUBLIC_BASE_URL:-https://your-domain.com}
    volumes:
      - ./data:/app/data
    networks:
      - app-network

  worker:
    build: ./backend
    command: python worker.py
    environment:
      - DATABASE_URL=sqlite:///./data/articles.db
      - INTERNAL_API_TOKEN=034c6ac483ecbb6dbe15889df3584868566c1acfb64d33a297022b4af5044f00
      - AI_WORKER_POLL_INTERVAL=3
      - AI_TASK_LOCK_TIMEOUT=300
    volumes:
      - ./data:/app/data
    depends_on:
      - api
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
